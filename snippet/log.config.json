{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "brief": {
      "format": "%(msg)s"
    },
    "context": {
      "format": "%(levelname)-6s %(name)-20s %(message)s"
    },
    "ConsoleFormatter":
    {
      "class": "logTools.MessageFormatter"
    }
  },
  "handlers": {
    "output-file": {
      "level": "INFO",
      "class": "logging.FileHandler",
      "formatter": "context",
      "filename": "log.output.log",
      "mode": "w",
      "encoding": "utf-8"
    },
    "debug-file": {
      "level": "DEBUG",
      "class": "logging.FileHandler",
      "formatter": "context",
      "filename": "log.debug.log",
      "mode": "w",
      "encoding": "utf-8"
    },
    "console": {
      "level": "INFO",
      "class": "logging.StreamHandler",
      "formatter": "ConsoleFormatter",
      "stream": "ext://sys.stdout"
    }
  },
  "loggers": {
    "": {
      "level": "NOTSET",
      "handlers": [
        "debug-file",
        "output-file",
        "console"
      ]
    }
  }
}
